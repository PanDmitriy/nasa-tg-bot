generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  telegramId Int       @unique @map("telegram_id")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  
  subscriptions DonkiSubscription[]

  @@map("users")
}

model DonkiSubscription {
  id         Int       @id @default(autoincrement())
  userId     Int       @map("user_id")
  eventType  String    @map("event_type")
  alertLevel String    @map("alert_level")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  
  user User @relation(fields: [userId], references: [telegramId], onDelete: Cascade)

  @@unique([userId, eventType])
  @@index([userId])
  @@index([eventType])
  @@map("donki_subscriptions")
}

model Subscription {
  id         Int      @id @default(autoincrement())
  telegramId String
  chatId     String
  type       String   // 'apod' | 'earth' | 'donki'
  params     Json?
  hourUtc    Int      // 0..23
  enabled    Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([chatId])
  @@index([type])
  @@index([enabled])
  @@map("subscriptions")
}

model NotificationLog {
  id             Int       @id @default(autoincrement())
  subscriptionId Int?      @map("subscription_id")
  telegramId      String?
  chatId         String?
  type           String
  status         String    // 'sent' | 'failed'
  payload        Json?
  error          String?
  createdAt      DateTime  @default(now()) @map("created_at")

  @@index([subscriptionId])
  @@index([chatId])
  @@index([status])
  @@index([createdAt])
  @@map("notification_logs")
}

model Premium {
  id         Int      @id @default(autoincrement())
  telegramId String
  active     Boolean  @default(true)
  until      DateTime
  createdAt  DateTime @default(now()) @map("created_at")

  @@index([telegramId])
  @@index([active])
  @@map("premiums")
}