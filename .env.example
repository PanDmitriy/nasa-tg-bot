# Обязательные переменные
# Токен вашего Telegram бота (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# API ключ NASA (получить на https://api.nasa.gov/)
NASA_API_KEY=your_nasa_api_key

# Путь к файлу базы данных SQLite
DATABASE_URL=file:./data/bot.db

# Окружение (development/production)
NODE_ENV=development

# Опциональные переменные

# DSN для Sentry (мониторинг ошибок)
# Получить на https://sentry.io/
# Если не установлен - Sentry отключен
SENTRY_DSN=

# Секретный ключ Stripe для Premium функций
# Получить на https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=

# Секрет webhook для верификации Stripe событий
# Получить на https://dashboard.stripe.com/webhooks
# Рекомендуется для production
STRIPE_WEBHOOK_SECRET=

# Домен для Stripe Checkout (redirect URL после оплаты)
DOMAIN_URL=http://localhost:3000

# Порт для webhook сервера Stripe
# Webhook сервер запускается только если установлен STRIPE_SECRET_KEY
WEBHOOK_PORT=3000
