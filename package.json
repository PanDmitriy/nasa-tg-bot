{
  "name": "nasa-tg-bot",
  "version": "1.0.0",
  "description": "Telegram bot for NASA API",
  "main": "dist/app/index.js",
  "scripts": {
    "start": "node dist/app/index.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/app/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "nasa",
    "telegram",
    "bot",
    "space"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.19",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "prettier": "^3.2.5",
    "prisma": "^6.19.0",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "node-cron": "^4.2.1",
    "stripe": "^19.3.0",
    "telegraf": "^4.15.3"
  }
}
